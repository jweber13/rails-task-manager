<div class="container mt-3">
  <div class="d-flex justify-content-between align-items-center">
    <h1>Tasks</h1>
    <%= link_to 'Add a Task', new_task_path, class: 'btn btn-light'  %>
  </div>
  <div class="cards">
    <% @tasks.each do |task| %>

      <div class>
        <h5> <%= link_to task.title, task_path(task), class: 'text-secondary text-decoration-none'%></h5>
        <p> <%=task.details %></p>
        <% if task.completed %>
          <p> <i class="fa-regular fa-square-check"> </i></p>
        <% else %>
          <p> <i class="fa-regular fa-square"> </i></p>
        <% end%>
      </div>

    <% end %>
  </div>
</div>
