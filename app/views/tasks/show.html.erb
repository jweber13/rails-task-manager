<div class="container">
  <h1><%= @task.title %></h1>
  <p><%= @task.details %></p>
  <p>Task Completed: <%= @task.completed %></p>
  <p>
    <%= link_to '🗑', task_path(@task), class: 'btn btn-light', data: { turbo_method: :delete, turbo_confirm: "Delete #{@task.title}?" } %>
  </p>
  <p>
    <%= link_to '📝', task_path(@task), class: 'btn btn-light'%>
  </p>
  <p>
    <%= link_to 'Tasks', tasks_path, class: 'btn btn-light' %>
  </p>
</div>
